package TP.PR1.MV;

public class ByteCode {
	private ENUM_BYTECODE name;
	private int param;
	
	public ByteCode(){
		this.name=ENUM_BYTECODE.PUSH;
		this.param=-1;
	}
	public ByteCode(ENUM_BYTECODE bc){
		this.name=bc;
		this.param=-1;
	}
	public ByteCode(ENUM_BYTECODE bc, int par){
		this.name=bc;
		this.param=par;
	}
	public String toString(){
		String cadena;
		String par=Integer.toString(this.param);
		
		switch(this.name){
		case PUSH: cadena= "PUSH " + par;break;
		case LOAD: cadena="LOAD " + par; break;
		case STORE: cadena= "STORE " + par; break;
		case ADD: cadena="ADD"; break;
		case SUB: cadena="SUB"; break;
		case MUL: cadena="MUL"; break;
		case DIV: cadena="DIV"; break;
		case OUT: cadena="OUT"; break;
		case HALT: cadena="HALT"; break;
		default: cadena="";
		}
		return cadena;
	}
	public boolean comprobarbc(){
		if (this.name != null){
			if (this.name == ENUM_BYTECODE.PUSH && this.param < 0) return false;
			else if (this.name == ENUM_BYTECODE.LOAD && this.param < 0) return false;
			else if (this.name == ENUM_BYTECODE.STORE && this.param < 0) return false;
			else return true;
		}
		else return false;
	}
}
